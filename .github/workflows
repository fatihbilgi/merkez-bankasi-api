name: Scheduled Job

on:
  schedule:
    - cron: '59 0 * * *'  # Her gün 00:00'de çalıştır

jobs:
  run-job:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Run your script
      run: |
        python scriptGoogle.py  # Python script'inizin yolu ve çalıştırılması

